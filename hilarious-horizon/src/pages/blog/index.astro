---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout>
  <main class="container">
    <h1>Blog</h1>
    <div>
      <ul>
        {
          posts.map((post) => (
            <li class="item">
              <b>{post.data.title}</b> <br />
              <a href={`/blog/${post.id}`}>Read More</a>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>

<style>
  ul {
    padding: 0;
    margin: 0;
  }

  .item {
    margin-bottom: 1rem;
    list-style: none;
  }
</style>
